// ==========================================================================
// List styles
// ==========================================================================

ul,
ol {
    margin: 0 0 @grid-section-padding;
}

.list-unstyled,
.list-inline {
    list-style: none;
    margin: 0;
    padding: 0;
}

.list-inline {
    font-size: 0;

    li {
        display: inline-block;
        vertical-align: middle;
        .font-size();
    }
    &-spaced li {
        margin-right: @padding-small-horizontal;

        &:last-child {
            margin-right: 0;
        }
    }
}

.social-links,
.payment-logos {
    list-style: none;
    padding: 0;
    margin-left: -@padding-small-horizontal;
    margin-bottom: 0;

    li {
        display: inline-block;
        margin-left: @padding-small-horizontal;
        margin-bottom: @padding-small-vertical;
    }

    a,
    svg {
        display: block;
    }

    a:hover,
    a:focus {
        position: relative;
        bottom: 1px;
    }
}