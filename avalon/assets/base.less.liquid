// ==========================================================================
// Base styles
// ==========================================================================

*,
*:after,
*:before {
    box-sizing: border-box;
}

html {
    height: 100%;
}

body {
    height: 100%;
    min-width: @grid-min-width;
    background: @body-background;
}

iframe {
    max-width: 100%;
    border: 0;
}
