// ==========================================================================
// Alerts
// ==========================================================================

.validation-block {
    display: none;

    &:not(:empty) {
        display: block;
        margin-top: 0;
    }
}

.alert,
.validation-block:not(:empty) {
    position: relative;
    padding: (@grid-section-padding / 3) (@grid-section-padding / 1.5);
    margin-bottom: (@grid-section-padding / 1.5);

    // Default style
    background-color: @state-warning-bg;
    border: 1px solid @state-warning-border;
    border-radius: @border-radius-base;
    color: @state-warning-text;
}

.alert-body {
    margin: 0;
}

.alert strong,
.alert a {
    color: inherit;
}

.alert a {
    text-decoration: underline;

    &:hover,
    &:focus {
        text-decoration: none;
        color: inherit;
    }
}

// Error alerts
.validation-block.field-validation-error:not(:empty),
.alert-error {
    background-color: @state-danger-bg;
    border-color: @state-danger-border;
    color: @state-danger-text;
}

// Success alerts
.validation-block.field-validation-valid:not(:empty),
.alert-success {
    background-color: @state-success-bg;
    border-color: @state-success-border;
    color: @state-success-text;
}

// Info alerts
.alert-info {
    background-color: @state-info-bg;
    border-color: @state-info-border;
    color: @state-info-text;
}

// Alerts cookie
.alert-cookie {
    background-color: @eu-cookie-background;
    color: @eu-cookie-color;

    .alert-body {
        padding-left: (@grid-section-padding * 1.5);
        padding-right: (@grid-section-padding * 1.5);
    }
}

// Announcement bar
.alert-announcement {
    color: @announcement-text;
    background: @announcement-bg;
}

a.alert-announcement {
    display: block;

    &:hover,
    &:focus {
        color: @announcement-text;
        background: darken(@announcement-bg, 5%);
        border-color: darken(@announcement-bg, 10%);
    }
}

// Dismiss alert
.alert .alert-dismiss {
    position: absolute;
    z-index: 2;
    top: 50%;
    right: (@grid-section-padding / 1.5);
    transform: translateY(-50%);
    flex-shrink: 0;
    color: inherit;
    padding: (@grid-section-padding / 6);

    .icon {
        display: block;
    }

    &:hover,
    &:focus {
        color: inherit;
    }
}

// Global alerts
.alerts .alert {
    margin-bottom: 0;
    border-width: 0;
    border-radius: 0;
    justify-content: center;
    text-align: center;
}
