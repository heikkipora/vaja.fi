// Text logo in footer and header
.text-logo {
    &:extend(.font-accent);
    font-weight: @font-weight-accent;
    line-height: 1.1;
    color: @text-logo-color;
    letter-spacing: -0.025em;
}

.payment-logo {
    height: 34px;
    width: 46px;
    fill: currentColor;
}
