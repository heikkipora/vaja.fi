// ==========================================================================
// Typography
// ==========================================================================

html {
    font-size: 62.5%;
}
body {
    color: @text-color;
    line-height: @line-height-base;
}
body,
input,
button,
select {
    &:extend(.font-base);
}

// Links
// -------------------------
a,
.btn-faux-link {
    color: @link-color;
    text-decoration: none;
    transition: all 0.2s ease;

    &:hover,
    &:focus {
        color: @link-hover-color;
    }

    &:focus {
        .tab-focus();
    }
}

// Headings
// -------------------------
h1,
h2,
h3,
h4,
h5,
h6,
.h1,
.h2,
.h3,
.h4,
.h5,
.h6 {
    &:extend(.font-headings);
    margin: 0 0 (@grid-section-padding / 2);
    line-height: @line-height-headings;
    color: @headings-color;
    letter-spacing: @letter-spacing-headings;

    small,
    .small {
        font-weight: normal;
        line-height: 1;
        color: @headings-small-color;
    }
}

h1,
.h1 {
    .font-size-h1();
}
h2,
.h2 {
    .font-size-h2();
}
h3,
.h3 {
    .font-size-h3();
}
h4,
.h4 {
    .font-size-h4();
}
h5,
.h5 {
    .font-size-h5();
}
h6,
.h6 {
    .font-size-h6();
    text-transform: uppercase;
}
h1,
h2,
h3,
h4,
h5,
h6 {
    .font-base,
    .font-headings,
    .font-accent {
        font-size: inherit;
    }
}

// Body text
// -------------------------
p {
    margin: 0 0 (@grid-section-padding / 2);

    @media (min-width: @screen-md) {
        margin-bottom: @grid-section-padding;
    }
}
small {
    .font-size(@font-size-small);
    color: lighten(@text-color, 10%);
}
b,
strong {
    color: @headings-color;
    font-weight: @font-weight-bold;
}

// Empty block
// -------------------------
.empty-block {
    margin: 0;
    padding-top: (@grid-section-padding * 2);
    padding-bottom: (@grid-section-padding * 2);
    .font-size(@font-size-large);
    color: @gray;
    text-align: center;

    .alert {
        margin: 0;
    }
}

// Placeholder
// -------------------------
.empty-placeholder {
    margin: (@grid-section-padding / 2) auto;
    padding: @grid-section-padding;
    max-width: 360px;
    background: #fff;
    border-radius: @border-radius-base;
    border: 1px solid @gray-lightest;
    color: @gray;
    text-align: center;

    .icon {
        display: block;
        width: 36px;
        height: 36px;
        margin: 0 auto @grid-section-padding;
    }
}

// Sections
// -------------------------
.section {
    padding-top: @grid-section-padding;
    padding-bottom: @grid-section-padding;

    &:first-child {
        border-top: 0;
    }

    .alert {
        margin-top: (@grid-section-padding / 2);
    }
    img {
        border-radius: @border-radius-base;
    }

    @media (min-width: @screen-sm) {
        padding-top: (@grid-section-padding * 1.5);
        padding-bottom: (@grid-section-padding * 1.5);

        h6 {
            margin-bottom: (@grid-section-padding * 1.5);
        }
    }
    @media (min-width: @screen-md) {
        padding-top: (@grid-section-padding * 2);
        padding-bottom: (@grid-section-padding * 2);

        h6 {
            margin-bottom: (@grid-section-padding * 2);
        }
    }

    &-tiles {
        padding-bottom: (@grid-section-padding / 2);
    }
}
// In the main section
main .section:nth-of-type(even),
main .section:first-child:last-child {
    background: @body-background;
}

// Quotes
// -------------------------
blockquote {
    margin: 0;
    padding: 0 (@grid-section-padding * 2);

    p {
        position: relative;
        margin: 0 0 (@grid-section-padding / 2);
    }
    p::before,
    p::after {
        position: absolute;
        font-family: "Georgia";
        font-size: 300%;
        font-weight: 600;
        opacity: 0.5;
    }
    p::before {
        content: "\201C";
        top: -0.4em;
        left: -0.6em;
    }
    p::after {
        content: "\201D";
        bottom: -0.65em;
        right: -0.6em;
    }
    cite {
        .font-size(@font-size-small);

        &::before {
            content: "- ";
        }
    }
}

// Section heading
// -------------------------
.section-heading {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: (@grid-section-padding / 2) 0;
    margin-bottom: @grid-section-padding;
    border-bottom: 1px solid fade(@text-color, 15%);

    h2,
    h3,
    .h2,
    .h3 {
        margin-bottom: 0;
    }

    a {
        margin-left: (@grid-section-padding / 2);
        .arrow(right);
        .arrow-inline();
    }
}

// Empty block
// -------------------------
.empty-placeholder {
    .empty-block {
        padding-top: @grid-section-padding * 2;
        padding-bottom: @grid-section-padding * 2;
        .font-size(@font-size-large);
        text-align: center;
    }
}

// Deprecated
// -------------------------
.empty-item-placeholder {
    position: relative;

    .empty-block {
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        transform: translateY(-50%) translateY(0.5px);
        z-index: 2;

        p {
            max-width: 720px;
            margin-left: auto;
            margin-right: auto;
        }
    }

    .placeholder-media,
    .placeholder-text {
        filter: grayscale(1) blur(1px);
    }
    .placeholder-media {
        opacity: 0.5;
    }
    .placeholder-text {
        opacity: 0.1;
    }
}

