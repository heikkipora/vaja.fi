// ==========================================================================
// Tooltips & popovers
// ==========================================================================

// Tooltip
.tooltip {
    position: relative;

    .tip {
        @border-base: darken(@tooltip-bg, 8%);

        // Arrow
        &::after {
            content: '';
            position: absolute;
            z-index: (@tooltip-zindex - 1);
            top: 100%;
            left: 50%;
            display: block;
            width: 10px;
            height: 10px;
            background: @tooltip-bg;
            transform: translate(-50%, -50%) rotate(45deg) translateY(1px);
            border: 1px solid @border-base;
            border-width: 0 1px 1px 0;
        }

        // Positioning
        visibility: hidden;
        position: absolute;
        z-index: @tooltip-zindex;
        bottom: 100%;
        left: 50%;
        margin-bottom: 15px;
        padding: 7px 12px;
        transform: translate(-50%, 0) scale(0);
        transition: transform 0.3s cubic-bezier(0.34, 1.61, 0.7, 1), opacity 0.3s ease;
        transform-origin: 50% 100%;

        // Type
        color: @tooltip-text-color;
        line-height: @line-height-base;
        text-align: center;
        .font-size(@font-size-small);
        font-weight: @font-weight-bold;
        pointer-events: none; // Let mouse events pass through
        white-space: nowrap;
        text-transform: none;
        text-shadow: none;

        // Styling
        opacity: 0;
        background: @tooltip-bg;
        border-radius: @border-radius-base;
        box-shadow: 0 1px 1px fade(#000, 5%);
        border: 1px solid @border-base;
    }
    &:hover .tip,
    &:focus .tip {
        visibility: visible;
        transform: translate(-50%, 0) scale(1);
        opacity: 1;
    }
}
button.tooltip,
a.tooltip {
    cursor: pointer;
}
