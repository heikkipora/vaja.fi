{% assign link_count = links.footer-menu | size %}

<footer class="footer">
    <div class="container row">
        <div class="span3">
            {% if modules contains "display_logos" %}
                <div class="footer-branding">
                    {% if settings.logo_display == "image" and store.logo %}
                        <a href="{{ store.url }}">
                            {{ store.logo | img_tag:store.display_name }}
                        </a>
                    {% else %}
                        <a href="{{ store.url }}">
                            <span class="text-logo">{{ store.display_name }}</span>
                        </a>
                    {% endif %}
                </div>
            {% endif %}

            {% editable_region footer true %}
            {% endeditable_region %}

            <div class="copyright">{{ store.display_name }} &copy; {{ "%Y" | date_now }} {% if modules contains "powered_by" %} &middot; {{ powered_by_link }}{% endif %}</div>
        </div>

        {% if link_count > 0 %}
            <div class="span3 offset1 footer-nav">
                <nav>
                    <ul class="list-unstyled">
                        {% for link in links.footer-menu %}
                            <li class="{% if link.is_active %} active {% endif %}">
                                <a href="{{ link.url }}"{% if link.target %} target="{{ link.target }}"{% endif %}>{{ link.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
            </div>
        {% endif %}

        {% if modules contains "social_links" %}
            <div class="span2">
                <p class="heading">{{ "contact.social.follow" | t }}</p>
                {% if store.social_links.rss_feed %}
                    {% assign feed_url = store.social_links.rss_feed %}
                {% else %}
                    {% assign feed_url = store.feed_url %}
                {% endif %}

                {% if store.social_links != empty or settings.feed_links != "none" %}
                    <ul class="social-links">
                        {% include social-links.liquid %}

                        {% if settings.feed_links != "none" %}
                            {% if settings.feed_links == "rss-only" or settings.feed_links == "both" %}
                                <li>
                                    <a href="{{ feed_url }}" target="_blank" class="tooltip">
                                        <svg role="img" class="icon icon-social" title="RSS">
                                            <use xlink:href="#theme-icon-round-rss"></use>
                                        </svg>
                                        <span class="tip">{{ "contact.social.rss_feed" | t }}</span>
                                    </a>
                                </li>
                            {% endif %}

                            {% if settings.feed_links == "feedly-only" or settings.feed_links == "both" %}
                                <li>
                                    <a href="http://cloud.feedly.com/#subscription%2Ffeed%2F{{ feed_url | url_encode }}" target="_blank" class="tooltip">
                                        <svg role="img" class="icon icon-social" title="Feedly">
                                            <use xlink:href="#theme-icon-round-feedly"></use>
                                        </svg>
                                        <span class="tip">{{ "contact.social.add_feedly" | t }}</span>
                                    </a>
                                </li>
                            {% endif %}
                        {% endif %}
                    </ul>
                {% endif %}
            </div>
        {% endif %}

        {% if modules contains "payment_logos" %}
            <div class="span3">
                <p class="heading">{{ "products.payment.we_accept" | t }}</p>
                {% include payment-logos.liquid %}
            </div>
        {% endif %}
    </div>
</footer>