{% include blocks-styles.liquid %}
{% assign header_text_empty = block.settings.header_text | is_null_or_empty %}

<div id="{{block.id}}" class="content-block content-block-grid {{ class | strip }}">
    <div class="container">
        {% include block-header.liquid %}
        <div class="block-container row {{ container_class | strip }}">
            {% for column_number in (1..block.settings.columns) %}
                {% capture block_column_name %}column_{{ column_number }}{% endcapture %}

                <div class="col">
                    {% block_column block_column_name %}{% endblock_column %}
                </div>
            {% endfor %}
        </div>
    </div>
</div>